{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "source",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["source/**/*"],
  "exclude": ["source/hot/**/*"]
}
