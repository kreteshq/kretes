{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": false,
    "outDir": "../../dist",
    "rootDir": "../../",
    "baseUrl": "../../",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "components/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "*.tsx",
    "../../site/**/*.ts",
    "../../site/**/*.vue"
  ],
  "exclude": [
    "../../site/_api",
    "node_modules"
  ]
}
